{
    "swagger": "2.0",
    "info": {
        "description": "This is Auth server.",
        "title": "Game API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:3000",
    "basePath": "/api/v1/auth",
    "paths": {
        "/api/v1/auth/me": {
            "get": {
                "description": "Get user data",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Get user data",
                "parameters": [
                    {
                        "type": "string",
                        "description": "InitData header",
                        "name": "initData",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "get param inviterId",
                        "name": "inviterId",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/server.userInfoResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/server.errorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/server.errorResponse"
                        }
                    }
                }
            }
        },
        "/api/v1/auth/referrals/{id}": {
            "get": {
                "description": "Get user referrals",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Get user referrals",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Inviter Id",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/core.UserReferrals"
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/server.errorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/server.errorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "core.Code": {
            "type": "string",
            "enum": [
                "INVALID_INITDATA",
                "INVALID_USER_ID",
                "OK",
                "INTERNAL_ERROR"
            ],
            "x-enum-varnames": [
                "CodeInvalidInitData",
                "CodeInvalidUserID",
                "CodeOK",
                "CodeInternal"
            ]
        },
        "core.UserReferrals": {
            "type": "object",
            "properties": {
                "firstname": {
                    "type": "string"
                },
                "referralId": {
                    "type": "integer"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "server.errorResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "$ref": "#/definitions/core.Code"
                },
                "errorInfo": {
                    "type": "string"
                }
            }
        },
        "server.userInfoResponse": {
            "type": "object",
            "properties": {
                "firstname": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "username": {
                    "type": "string"
                }
            }
        }
    }
}